<%- include('../includes/head.ejs') %>


<title>home page</title>
  </head>

  <body>
  <%- include('../includes/navbar.ejs') %>

    <div class="container pt-5">
      <!--delete Modal -->
      <form id="deleteForm" method="POST" class="d-inline"></form>

      <!--delete Modal -->
      <div
        class="modal fade"
        id="deleteModal"
        tabindex="-1"
        aria-labelledby="deleteLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title text-danger" id="deleteLabel">
                Delete warning!
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this?</div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button type="button" id="deleteBtn" class="btn btn-danger">
                Delete
              </button>
            </div>
          </div>
        </div>
      </div>

      <h1>this is home page</h1>
      <a href="/project/create" class="btn btn-info">create</a>

      <table class="table table-hover table-dark mt-3">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">name</th>
            <th scope="col">description</th>
            <th scope="col">startDate</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% if (projectList.length>0) { %> <%
          projectList.forEach(function(item, index) { %>
          <tr>
            <th scope="row">1</th>
            <td><%= item.name %></td>
            <td class="text-truncate" style="max-width: 400px">
              <%= item.description %>
            </td>
            <td><%= item.startDate %></td>

            <td>
              <a href="/project/update/<%= item.id %>" class="btn btn-warning"
                >Edit</a
              >
              <!-- Button trigger delete modal -->
              <button
                type="button"
                class="btn btn-danger"
                data-bs-toggle="modal"
                data-bs-target="#deleteModal"
                onclick='setDeleteID("<%= item.id %>")'
              >
                Delete
              </button>
            </td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="4">
              <span class="h1">Nothing here</span>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <script>
      let deleteForm = document.getElementById("deleteForm");
      let deleteBtn = document.getElementById("deleteBtn");

      function setDeleteID(id) {
        deleteForm.action = "/project/delete/" + id;
      }

      deleteBtn.onclick = () => {
        deleteForm.submit();
      };
    </script>
  </body>
</html>
