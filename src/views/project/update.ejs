<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>update</title>
  </head>

  <body>
    <div class="container mt-5">
      <h1>update page</h1>
      <form
        method="POST"
        id="updateForm"
        class="border border-1 border-black p-2 rounded-3"
        action="/project/update"
      >
        <div class="form-group mt-4">
          <label for="inputName" class="h5">Name</label>
          <input
            name="name"
            type="Name"
            class="form-control"
            id="inputName"
            value="<%= project.name %>"
            aria-describedby="NameHelp"
            placeholder="Enter Name"
          />
        </div>
        <div class="form-group mt-4">
          <label for="inputDesc" class="h5">Description</label>
          <textarea
            class="form-control"
            name="description"
            type="text"
            class="form-control"
            id="inputDesc"
            placeholder="Description"
            rows="3"
          >
<%= project.description %>
            </textarea
          >
        </div>

        <div class="form-group mt-4">
          <label for="inputDate" class="h5">start Date</label>
          <input
            name="startDate"
            type="date"
            class="form-control"
            id="inputDate"
            value="<%= project.startDate %>"
          />
        </div>
        <input type="hidden" name="id" value="<%= project.id %>" />
        <input
          type="button"
          onclick="isValid()"
          class="btn btn-primary"
          value="submit"
        />
        <a class="btn btn-secondary" href="/project">Cancel</a>
      </form>
    </div>
    <script>
      let updateForm = document.getElementById("updateForm");
      const isValid = function () {
        updateForm.submit();
      };
    </script>
  </body>
</html>
