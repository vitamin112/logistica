<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

    <title>Create new user</title>
</head>

<body>
    <div class="container my-5 ">
        <h1>Create new user</h1>
        <form method="POST" id="createForm" class="border border-1 border-black p-2 rounded-3" action="/create-user">
            <div class="form-group mt-4">
                <label for="inputEmail" class="h5">Email address</label>
                <input name="email" type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp"
                    placeholder="Enter email">
            </div>
            <div class="form-group mt-4">
                <label for="inputName" class="h5">Name</label>
                <input name="userName" type="Name" class="form-control" id="inputName" aria-describedby="NameHelp"
                    placeholder="Enter Name">
            </div>
            <div class="form-group mt-4">
                <label for="inputPassword" class="h5">Password</label>
                <input name="password" type="password" class="form-control" id="inputPassword" placeholder="Password">
            </div>

            <div class="form-group mt-4">
                <label for="inputConfirmPassword" class="h5">Confirm Password</label>
                <input name="ConfirmPassword" type="password" class="form-control" id="inputConfirmPassword"
                    placeholder="Confirm Password">
            </div>
            <div class="form-group mt-4">
                <label for="inputphone" class="h5">phone</label>
                <input name="phone" type="number" class="form-control" id="inputphone" placeholder="phone">
            </div>
            <div class="form-group mt-4">
                <label for="inputaddress" class="h5">address</label>
                <input name="address" type="text" class="form-control" id="inputaddress" placeholder="address">
            </div>
            <div class="form-group my-4">
                <label class="h5">Sex</label>
                <div class="form-check">
                    <input class="form-check-input border-1 border-black" type="radio" name="sex" value="Male"
                        id="inputsexMale">
                    <label class="form-check-label " for="inputsexMale">
                        Male
                    </label>
                </div>
                <div class="form-check ">
                    <input class="form-check-input border-1 border-black" type="radio" name="sex" value="Female"
                        id="inputsexFemale">
                    <label class="form-check-label" for="inputsexFemale">
                        Female
                    </label>
                </div>
            </div>

            <input type="button" onclick="isValid()" class="btn btn-primary" value="submit" />
            <a class="btn btn-secondary" href="/user">Cancel</a>
        </form>

    </div>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>

        let createForm = document.getElementById("createForm");
        if ('<%= message %>' != "") {

            Toastify({
                text: '<%= message %>',
                duration: 3000,
                style: {
                    background: "red",
                    borderRadius: "5px",
                }
            }).showToast();
        }
        let isValid = function () {
            let nameText = document.getElementById("inputName").value;
            let emailText = document.getElementById("inputEmail").value;
            let inputPassword = document.getElementById("inputPassword").value;

            if (nameText == "" && emailText == "" && inputPassword == "") {
                Toastify({
                    text: "You need to fill all the fields",
                    duration: 3000,
                    style: {
                        background: "red",
                        borderRadius: "5px",
                    }
                }).showToast();
            } else {
                createForm.submit();
            }
        }


    </script>
</body>

</html>