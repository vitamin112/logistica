<%- include('../includes/head.ejs') %>

  </head>

  </body>
    <div class="container my-5">
      <h1>Create new project</h1>
      <form
        method="POST"
        id="createForm"
        class="border border-1 border-black p-2 rounded-3"
        action="/project/create"
      >
        <div class="form-group mt-4">
          <label for="inputName" class="h5">Name</label>
          <input
            name="name"
            type="Name"
            class="form-control"
            id="inputName"
            aria-describedby="NameHelp"
            placeholder="Enter Name"
          />
        </div>
        <div class="form-group mt-4">
          <label for="inputDesc" class="h5">Description</label>
          <textarea
            class="form-control"
            name="description"
            type="text"
            class="form-control"
            id="inputDesc"
            placeholder="Description"
            rows="3"
          ></textarea>
        </div>
        <div class="form-group mt-4">
          <label for="inputstartDate" class="h5">start Date</label>
          <input
            name="startDate"
            type="date"
            class="form-control"
            id="inputDesc"
            placeholder="Description"
          />
        </div>

        <input
          type="button"
          onclick="isValid()"
          class="btn btn-primary"
          value="submit"
        />
        <a class="btn btn-secondary" href="/project">Cancel</a>
      </form>
    </div>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>
    <script>
      let createForm = document.getElementById("createForm");

      let isValid = function () {
        let nameText = document.getElementById("inputName").value;
        let emailText = document.getElementById("inputDesc").value;

        if (nameText == "" && emailText == "") {
          Toastify({
            text: "You need to fill all the fields",
            duration: 3000,
            style: {
              background: "red",
              borderRadius: "5px",
            },
          }).showToast();
        } else {
          createForm.submit();
        }
      };
    </script>
  </body>
</html>
